<!-- views/image.hbs -->

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
    </div>
    <div class="card-body">
        <a href="/images/{{this.filename}}">
          
            <img src="/public/upload/{{this.filename}}" alt="{{image.title}}" class="img-fluid">
        </a>
        <p>{{image.description}}</p>
    </div>
</div>
