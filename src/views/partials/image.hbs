<!-- views/image.hbs -->

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{this.title}}</h2>
    </div>
    <div class="card-body">
        <a href="/images/{{filename}}">
            <!-- Aquí cambié `src` para que use `filename` en lugar de `_id` -->
            <img src="upload/{{this.filename}}" alt="{{title}}" class="img-thumbnail">
        </a>
        <p>{{this.description}}</p>
    </div>
</div>
