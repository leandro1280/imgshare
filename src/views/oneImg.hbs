<!-- views/index.hbs -->

<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="fa-solid fa-image"></i> Ver imagen
        </h3>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
    </div>
    <div class="card-body">
        <a href="/images/{{image.filename}}">
            <!-- Aquí cambié `src` para que use `filename` en lugar de `_id` -->
            <img src="/upload/{{image.filename}}" alt="{{image.title}}" class="img-thumbnail">
        </a>
        <p>{{image.description}}</p>
    </div>
</div>
